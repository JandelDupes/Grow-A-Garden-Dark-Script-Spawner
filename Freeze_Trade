--// LocalScript - Place this in StarterPlayerScripts
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- Create ScreenGui
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "RedOwl_Scripts"
gui.ResetOnSpawn = false

-- UI Corner Creator
local function addUICorner(obj, radius)
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, radius)
	corner.Parent = obj
end

-- Main Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 140)
frame.Position = UDim2.new(0.05, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(33, 33, 33)
frame.BorderSizePixel = 0
frame.Name = "TradeOptions"
frame.Active = true
frame.Draggable = true
addUICorner(frame, 12)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "RedOwl Scripts"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 20

-- Freeze Trade Toggle
local freezeToggle = Instance.new("TextButton", frame)
freezeToggle.Size = UDim2.new(0.9, 0, 0, 35)
freezeToggle.Position = UDim2.new(0.05, 0, 0.35, 0)
freezeToggle.Text = "❄️ Freeze Trade: OFF"
freezeToggle.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
freezeToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
freezeToggle.Font = Enum.Font.Gotham
freezeToggle.TextSize = 16
addUICorner(freezeToggle, 8)

-- Auto Accept Toggle
local autoToggle = Instance.new("TextButton", frame)
autoToggle.Size = UDim2.new(0.9, 0, 0, 35)
autoToggle.Position = UDim2.new(0.05, 0, 0.65, 0)
autoToggle.Text = "✅ Auto Accept: OFF"
autoToggle.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
autoToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
autoToggle.Font = Enum.Font.Gotham
autoToggle.TextSize = 16
addUICorner(autoToggle, 8)

-- Popup Label
local popup = Instance.new("TextLabel", gui)
popup.Size = UDim2.new(0.3, 0, 0.06, 0)
popup.Position = UDim2.new(0.35, 0, 0.88, 0)
popup.BackgroundColor3 = Color3.fromRGB(46, 204, 113)
popup.TextColor3 = Color3.fromRGB(0, 0, 0)
popup.Text = ""
popup.Font = Enum.Font.GothamBold
popup.TextSize = 20
popup.Visible = false
popup.BorderSizePixel = 0
popup.TextScaled = true
addUICorner(popup, 10)

-- Function to show popup
local function showPopup(message)
	popup.Text = message
	popup.Visible = true
	TweenService:Create(popup, TweenInfo.new(0.4), {BackgroundTransparency = 0}):Play()
	wait(2)
	TweenService:Create(popup, TweenInfo.new(0.4), {BackgroundTransparency = 1}):Play()
	wait(0.4)
	popup.Visible = false
	popup.BackgroundTransparency = 0
end

-- Toggle logic
local freezeOn = false
local autoOn = false

freezeToggle.MouseButton1Click:Connect(function()
	freezeOn = not freezeOn
	freezeToggle.Text = (freezeOn and "❄️ Freeze Trade: ON" or "❄️ Freeze Trade: OFF")
	freezeToggle.BackgroundColor3 = freezeOn and Color3.fromRGB(39, 174, 96) or Color3.fromRGB(60, 60, 60)
	showPopup("User Froze Successfully")
end)

autoToggle.MouseButton1Click:Connect(function()
	autoOn = not autoOn
	autoToggle.Text = (autoOn and "✅ Auto Accept: ON" or "✅ Auto Accept: OFF")
	autoToggle.BackgroundColor3 = autoOn and Color3.fromRGB(41, 128, 185) or Color3.fromRGB(60, 60, 60)
	if autoOn then
		showPopup("Auto Accept Activated")
	end
end)
